<p id="notice"><%= notice %></p>

<h1>Registered Events</h1>

<table class="table table-bordered table-striped table-sm">
  <thead>
    <tr>
      <th>Event</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.event %></td>
        <td><%= booking.user.name %></td>
        <td><%= button_to 'Show', booking, class:"btn btn-sm btn-primary"%></td>
        <td><%= button_to 'Edit', edit_booking_path(booking), class:"btn btn-sm btn-warning" %></td>
        <td><%= button_to "Delete Booking", booking, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

