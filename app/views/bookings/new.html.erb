<% content_for :title do %>
    New Booking
<%end%>

<div class: "card" style="width: 30rem;">
    <div class="card-header">
       <h3> Book 
        <%= link_to @event.event_name,event_path(@event)%>
        </h3>
    </div>
    <div class="card-body">
        <%= form_tag event_bookings_path(@event) do %>
            <%=submit_tag "REGISTER", class: 'btn btn-success'%>
        <% end %>
    </div>
    
    <div class="card-footer">       
        <%= link_to 'Back', events_path(@event) %>
    </div>

</div>

